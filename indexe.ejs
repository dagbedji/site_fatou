  <div class="row featurette mt-5">
    <form action="savePrincipes" method="POST">
      <div class="row featurette mb-5 mt-3">
        <!-- Text Content Section -->
        <div class="col-md-7 order-md-1">
          <h2 class="featurette-heading fw-normal lh-1 mt-3">
            Quels sont nos <span class="text-body-secondary">Principes :</span>
          </h2>
          <p class="lead">
            <% principes.forEach((principe, index) => { %>
              <!-- Principe title and text (visible by default) -->
              <div class="lead" id="text-<%= index %>">
                <span class="text-success fw-bold"><%= principe.title %></span> <%= principe.text %> <br>
              </div>
  
              <!-- CKEditor Version (Hidden by default) <button type="button" class="btn btn-primary mb-3" id="edit-btn">Edit</button>-->
              <div class="principe-edit" id="editor-<%= index %>" style="display: none;">
                <div class="mb-3">
                  <label for="title-<%= index %>" class="form-label">Title</label>
                  <textarea name="titles[]" id="title-<%= index %>" class="ckeditor form-control" rows="3"><%= principe.title %></textarea>
                </div>
                <div class="mb-3">
                  <label for="text-<%= index %>" class="form-label">Text</label>
                  <textarea name="texts[]" id="text-<%= index %>" class="ckeditor form-control" rows="6"><%= principe.text %></textarea>
                </div>
              </div>
            <% }); %>
          </p>
        </div>
  
        <!-- Image Section -->
        <div class="col-md-5 order-md-2">
          <img src="/assets/image/enfant-garderie-cpe.jpg" class="img-fluid mx-auto d-block" width="400" height="400" alt="Your Image">
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <button type="button" class="btn btn-success" id="edit-btn">Edit</button>
        <button type="submit" class="btn btn-success" id="save-btn" style="display: none;">Save Changes</button>
      </div>
      <!-- Save Changes Button  <button type="submit" class="btn btn-primary mt-3" id="save-btn" style="display: block;">Save Changes</button>-->
      
    </form>

  </div>

<script>
    // Initialize CKEditor for all textareas with the class 'ckeditor'
    document.querySelectorAll('.ckeditor').forEach(textarea => { //permet de creer le ckeditor pour les text input
    ClassicEditor.create(textarea).catch(error => console.error(error));
  });
  // Add event listener to the Edit button
  document.getElementById("edit-btn").addEventListener("click", function () {
    console.log("Button is clicked!");
    // Hide the edit button
    this.style.display = "none";
    document.getElementById("save-btn").style.display ="block";
      // Get all elements with the class "principe-edit" and make them visible
  const editors = document.getElementsByClassName("principe-edit");
  for (let i = 0; i < editors.length; i++) {
    editors[i].style.display = "block";
  }
  });
</script>

